<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">

        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>

            <h2 class="text-light" >Hey <t t-esc="user.name" />!</h2>
            <p class="mb-4 text-light">Here is your dashboard</p>

            <div class="dashboardGrid">
                <DashboardItem size="1" colorClass="'red'">
                    <t t-set-slot="header">
                        <h3>average_quantity</h3>
                    </t>
                    <t t-set-slot="default">
                        <t t-esc="dashboardData.average_quantity" />
                    </t>
                </DashboardItem>

                <DashboardItem size="1" colorClass="'teal'">
                    <t t-set-slot="header">
                        <h3>average_time</h3>
                    </t>
                    <t t-set-slot="default">
                        <t t-esc="dashboardData.average_time" />
                    </t>
                </DashboardItem>

                <DashboardItem size="2" height="3" colorClass="'orange'">
                    <t t-set-slot="header">
                        <h3>orders_by_size</h3>
                    </t>
                    <t t-set-slot="default">
                        <PieChart data="dashboardData['orders_by_size']" label="'Shirt orders by size'"/>
                    </t>
                </DashboardItem>

                <DashboardItem size="1" height="2" colorClass="'green'">
                    <t t-set-slot="header">
                        <h3>orders_by_status</h3>
                    </t>
                    <t t-set-slot="default">
                        <t t-esc="dashboardData.nb_cancelled_orders" />
                        <i class="fa-solid fa-arrow-trend-up"></i>
                    </t>
                </DashboardItem>

                <DashboardItem size="2" colorClass="'yellow'">
                    <t t-set-slot="header">
                        <h3>total_amount</h3>
                    </t>
                    <t t-set-slot="default">
                        <t t-esc="dashboardData.total_amount" />
                    </t>
                </DashboardItem>

                <DashboardItem size="1" colorClass="'cyan'">
                    <t t-set-slot="header">
                        <h3>new_orders</h3>
                    </t>
                    <t t-set-slot="default">
                        <t t-esc="dashboardData.nb_new_orders" />
                    </t>
                </DashboardItem>

                <DashboardItem size="2" height="2" colorClass="'purple'" t-if="latestLeads">
                    <t t-set-slot="header">
                        <h3>new_customers</h3>
                    </t>
                    <t t-set-slot="default">
                        <DashboardLeads latestLeads="latestLeads" />
                    </t>
                </DashboardItem>

            </div>
        </Layout>
    </t>

</templates>
