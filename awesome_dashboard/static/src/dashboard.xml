<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">

        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
            </t>

            <div class="dashboardGrid">

                <!-- 
                    //   "result": {
                    //     "average_quantity": 9,
                    //     "average_time": 90,
                    //     "nb_cancelled_orders": 47,
                    //     "nb_new_orders": 129,
                    //     "orders_by_size": {
                    //         "m": 103,
                    //         "s": 27,
                    //         "xl": 72
                    //     },
                    //     "total_amount": 985
                    // } -->
                <DashboardItem size="1">
                    <t t-set-slot="default">
                        <h3>average_quantity</h3>
                        <p>Avg: <t t-esc="dashboardData.average_quantity" />
                        </p>
                    </t>
                </DashboardItem>
                <DashboardItem size="1">
                    <t t-set-slot="default">
                        <h3>average_time</h3>
                        <p>Avg: <t t-esc="dashboardData.average_time" />
                        </p>
                    </t>
                </DashboardItem>
                <DashboardItem size="1">
                    <t t-set-slot="default">
                        <h3>nb_cancelled_orders</h3>
                        <p>Cancelled: <t t-esc="dashboardData.nb_cancelled_orders" />
                        </p>
                    </t>
                </DashboardItem>
                <DashboardItem size="2">
                    <t t-set-slot="default">
                        <h3>total_amount</h3>
                        <p>Total: <t t-esc="dashboardData.total_amount" />
                        </p>
                    </t>
                </DashboardItem>
                <DashboardItem size="3">
                    <t t-set-slot="default">
                        <h3>orders_by_size</h3>
                        <!-- full width 3 col row -->
                        <div class="row w-100">
                            <div class="col-4">Size M: <t t-esc="dashboardData.orders_by_size.m" />
                            </div>

                            <div class="col-4">Size S: <t t-esc="dashboardData.orders_by_size.s" />
                            </div>

                            <div class="col-4">Size XL: <t t-esc="dashboardData.orders_by_size.xl" />
                            </div>
                        </div>
                    </t>
                </DashboardItem>

                <DashboardItem size="1">
                    <t t-set-slot="default">
                        <h3>nb_new_orders</h3>
                        <p>New: <t t-esc="dashboardData.nb_new_orders" />
                        </p>
                    </t>
                </DashboardItem>

            </div>
        </Layout>
    </t>

</templates>
