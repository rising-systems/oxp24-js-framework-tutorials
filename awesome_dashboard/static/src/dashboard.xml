<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_dashboard.AwesomeDashboard">
        <Layout display="display" className="'o_dashboard h-100'">
            <t t-set-slot="layout-buttons">
                <button class="btn btn-primary" t-on-click="openCustomerView">Customers</button>
                <button class="btn btn-primary" t-on-click="openLeads">Leads</button>
                <button class="btn btn-secondary" t-on-click="openSettings">Settings</button>
            </t>
            <div class="d-flex flex-wrap">
                <DashboardItem>
                    <h5>Average amount of t-shirt by order this month</h5>
                    <span t-esc="statistics.average_quantity" class="text-success fw-bold" style="font-size: 2rem;"/>
                </DashboardItem>
                <DashboardItem size="2">
                    <h5>Average time for an order to go from 'new' to 'sent' or 'cancelled'</h5>
                    <span t-esc="statistics.average_time" class="text-success fw-bold" style="font-size: 2rem;"/>
                </DashboardItem>
                <DashboardItem>
                    <h5>Number of cancelled orders this month</h5>
                    <span t-esc="statistics.nb_cancelled_orders" class="text-success fw-bold" style="font-size: 2rem;"/>
                </DashboardItem>
                <DashboardItem>
                    <h5>Number of new orders this month</h5>
                    <span t-esc="statistics.nb_new_orders" class="text-success fw-bold" style="font-size: 2rem;"/>
                </DashboardItem>
                <DashboardItem>
                    <h5>Total amount of new orders this month</h5>
                    <span t-esc="statistics.total_amount" class="text-success fw-bold" style="font-size: 2rem;"/>
                </DashboardItem>
                <DashboardItem size="2">
                    <h5>Shirt orders by size</h5>
                    <PieChart data="statistics.orders_by_size" />
                </DashboardItem>
            </div>
        </Layout>
    </t>

</templates>