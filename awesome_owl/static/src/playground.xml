<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <div class="p-3">
            Owl Playground
        </div>
        <CardWithSlot title="'Empty slot'" />
        <CardWithSlot title="'Stateful Sum'">
            <Counter onChange.bind="incrementSum"/>
            <Counter onChange.bind="incrementSum"/>
            <Counter onChange.bind="incrementSum" increment="2"/>
            <p>Sum: <span t-esc="state.sum" /></p>
        </CardWithSlot>
        <CardWithSlot title="'Steteless Sum'">
            <!-- <CounterStateless value="this.statelessCounters[0]" /> -->
            <CounterStateless value="statelessCounters[0]" onChange.bind="() => this.statelessCounters[0]++"/>
            <CounterStateless value="statelessCounters[1]" onChange.bind="() => this.statelessCounters[1]++"/>
            <p>Sum: <span t-esc="statelessCountersSum" /></p>
        </CardWithSlot>
        <div>
            <Card title="'First card title'" content="'Card contents'" />
            <Card title="'Second card title'" content="this.htmlcontent" />
        </div>
        <div>
            <TodoList />
        </div>
    </t>

</templates>