<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <div class="p-3">
            Owl Playground
        </div>
        <div>
            <Counter onChange.bind="incrementSum"/>
            <Counter onChange.bind="incrementSum"/>
            <Counter onChange.bind="incrementSum" increment="2"/>
            <p>Sum: <span t-esc="state.sum" /></p>
        </div>
        <div>
            <Card title="'First card title'" content="'Card contents'" />
            <Card title="'Second card title'" content="this.htmlcontent" />
        </div>
    </t>

</templates>