<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="awesome_owl.playground">
        <div class="p-3">
            <h1>Awesome Owl Playground</h1>
            <!-- Welcome message -->
            <div>
                <h2>Welcome to the Awesome Owl Playground</h2>
                <p>
                    This is a playground where you can test the features of the Awesome Owl framework.
                </p>
            </div>
        </div>

        <!-- Counter card -->
        <!-- Add index to cards (indexCount) -->
        <t t-esc="counterSum" />

        <t t-foreach="cards" t-as="i" t-key="i.idx">
            <CounterCard indexCount="i.idx" cardBody="i.cardBody" count="i.count" onChange.bind="counterSumChanged"/>
        </t>


        <section class="p-3">
            <TodoList />
        </section>

        <section class="p-3">
            <TemplateComponent>
                <!-- Fill the footer slot -->
                <t t-set-slot="footer">
                    <h3>Footer</h3>
                    <p>This is the footer of the template component</p>
                </t>

                <!-- fill the default slot -->
                <t t-set-slot="default">
                    This is some text inside a template component
                </t>
            </TemplateComponent>
        </section>

    </t>

</templates>
