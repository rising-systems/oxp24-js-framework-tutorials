<templates xml:space="preserve">
	<t t-name="awesome_owl.CardWithSlot">
		<div class="card d-inline-block m-2" style="width: 18rem;">
			<div class="card-body">
				<h5 class="card-title">
					<t t-esc="props.title"/>
					<span t-if="props.slots" class="fa fa-minus ms-3 text-danger" t-on-click="toggleCardMinimized" />
				</h5>
				<div t-if="props.slots &amp;&amp; !this.state.isMinimized">
					<t t-slot="default"/>
				</div>
			</div>
		</div>
	</t>
</templates>